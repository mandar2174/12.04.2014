#!/bin/sh
### BEGIN INIT INFO
# Provides:          jboss
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start/Stop JBoss AS 8.0.0
### END INIT INFO


export JAVA_HOME=/usr/java/default

#define where jboss is - this is the directory containing directories log, bin, conf etc
#export JBOSS_HOME=${JBOSS_HOME:-"/srv/jboss"}
#################Modified for the aricloud project###########
export JBOSS_HOME=${JBOSS_HOME:-"/usr/local/jboss"}
#export JAVA_OPTS="-Xms256m -Xmx512m -XX:MaxPermSize=256m -Dsnf.home=/opt/SNFPropertyFile -Dsnf.conf=/opt/SNFPropertyFile/conf -Djava.net.preferIPv4Stack=true -Dorg.jboss.resolver.warning=true -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rm"
#################End changes#########################
#define the user under which jboss will run, or use 'RUNASIS' to run as the current user
export JBOSS_USER=${JBOSS_USER:-"jboss"}

#make sure java is in your path
JAVAPTH=${JAVAPTH:-"$JAVA_HOME/bin/java"}
export PATH=$PATH:$JAVAPTH



[ -r /etc/profile.d/java.sh ] && . /etc/profile.d/java.sh
[ -r /etc/profile.d/jboss.sh ] && . /etc/profile.d/jboss.sh

case "$1" in
    start)
        echo "Starting JBoss AS 8.0.0"
        sudo su - jboss -c "sh ${JBOSS_HOME}/bin/standalone.sh -b 0.0.0.0 2>&1" &
    ;;
    stop)
        echo "Stopping JBoss AS 8.0.0"
        sudo su - jboss -c "sh ${JBOSS_HOME}/bin/jboss-cli.sh --connect command=:shutdown 2>&1" &
    ;;
    restart)
        echo "Stopping JBoss AS 8.0.0"
        sudo su - jboss -c "sh ${JBOSS_HOME}/bin/jboss-cli.sh --connect command=:shutdown 2>&1" &
        echo "Starting JBoss AS 8.0.0"
        sudo su - jboss -c "sh ${JBOSS_HOME}/bin/standalone.sh 2>&1" &
    ;;
    *)
        echo "Usage: /etc/init.d/jboss {start|stop|restart}"
        exit 1
    ;;
esac

exit 0